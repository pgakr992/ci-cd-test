pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/repo-name.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'  // Install Python deps
            }
        }
        stage('Deploy') {
            steps {
                sh 'nohup python app.py > log.txt 2>&1 &'  # Runs in background, logs to log.txt
                sh 'sleep 5'  # Wait for app to start
                }
            }
        
    }
}
